<%- include('partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-5">
    <h2 class="font-serif">Room Type Portfolio</h2>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#typeModal">+ Define New Type</button>
</div>

<div class="row g-4">
    <% types.forEach(type => { %>
    <div class="col-md-4">
        <div class="card p-4 border-0 shadow-sm <%= type.is_active ? '' : 'opacity-50 grayscale' %>">
            <div class="d-flex justify-content-between align-items-start mb-3">
                <h5 class="fw-bold mb-0"><%= type.name %></h5>
                <span class="badge <%= type.is_active ? 'bg-success' : 'bg-secondary' %>"><%= type.is_active ? 'Active' : 'Disabled' %></span>
            </div>
            <p class="text-muted small mb-4 h-[50px] overflow-hidden"><%= type.description %></p>
            <div class="d-flex justify-content-between align-items-center">
                <span class="fs-4 fw-serif text-primary">$<%= type.base_price %></span>
                <button class="btn btn-sm btn-outline-dark" onclick="editType('<%= JSON.stringify(type) %>')">Modify</button>
            </div>
        </div>
    </div>
    <% }) %>
</div>

<!-- Modal -->
<div class="modal fade" id="typeModal" tabindex="-1">
    <div class="modal-dialog">
        <form action="/room-types" method="POST" class="modal-content">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold">Room Type Configuration</h5>
            </div>
            <div class="modal-body">
                <input type="hidden" name="id" id="type_id">
                <div class="mb-3">
                    <label class="form-label small fw-bold">TYPE NAME</label>
                    <input type="text" name="name" id="type_name" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label class="form-label small fw-bold">DESCRIPTION</label>
                    <textarea name="description" id="type_desc" class="form-control" rows="3"></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label small fw-bold">BASE PRICE ($)</label>
                    <input type="number" name="base_price" id="type_price" class="form-control" required>
                </div>
                <div class="form-check form-switch mb-3">
                    <input class="form-check-input" type="checkbox" name="is_active" id="type_active" checked>
                    <label class="form-check-label small fw-bold">ACTIVE ON WEBSITE</label>
                </div>
            </div>
            <div class="modal-footer border-0 pt-0">
                <button type="submit" class="btn btn-primary w-100">COMMIT CHANGES</button>
            </div>
        </form>
    </div>
</div>

<script>
function editType(data) {
    const type = JSON.parse(data);
    document.getElementById('type_id').value = type.id;
    document.getElementById('type_name').value = type.name;
    document.getElementById('type_desc').value = type.description;
    document.getElementById('type_price').value = type.base_price;
    document.getElementById('type_active').checked = type.is_active === 1;
    new bootstrap.Modal(document.getElementById('typeModal')).show();
}
</script>

<%- include('partials/footer') %>