<%- include('partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Operational Overview</h2>
    <div class="text-muted"><%= new Date().toDateString() %></div>
</div>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card p-4">
            <small class="text-muted text-uppercase fw-bold">Total Rooms</small>
            <h1 class="mt-2"><%= stats.totalRooms %></h1>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card p-4">
            <small class="text-muted text-uppercase fw-bold">Active Bookings</small>
            <h1 class="mt-2"><%= stats.activeBookings %></h1>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card p-4">
            <small class="text-muted text-uppercase fw-bold">Total Revenue</small>
            <h1 class="mt-2">$<%= stats.totalRevenue.toFixed(2) %></h1>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card p-4">
            <h5>Recent Activity</h5>
            <p class="text-muted">No recent system logs to display.</p>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
