<%- include('partials/header') %>

<div class="mb-5">
    <a href="/guests" class="text-decoration-none text-muted small mb-2 d-inline-block">&larr; Back to CRM</a>
    <div class="d-flex justify-content-between align-items-end">
        <div>
            <div class="d-flex align-items-center gap-3">
                <h2 class="font-serif mb-0"><%= guest.full_name %></h2>
                <% if (guest.is_vip) { %>
                    <span class="badge bg-warning text-dark">VIP GUEST</span>
                <% } %>
            </div>
            <p class="text-muted mb-0">Member since <%= new Date(guest.created_at).toLocaleDateString() %></p>
        </div>
        <div class="text-end">
            <span class="text-muted small text-uppercase" style="letter-spacing: 0.1em;">Total Spent</span>
            <h3 class="text-success mb-0">$<%= bookings.filter(b => ['approved', 'checked_in', 'checked_out'].includes(b.status)).reduce((a, b) => a + b.total_price, 0).toLocaleString() %></h3>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-md-4">
        <div class="card border-0 shadow-sm p-4 h-100">
            <h6 class="small fw-bold text-uppercase text-muted mb-4" style="letter-spacing: 0.1em;">Contact Details</h6>
            
            <div class="mb-3">
                <label class="small text-muted d-block">Phone Number</label>
                <span class="fw-bold"><%= guest.phone_number %></span>
            </div>
            
            <div class="mb-3">
                <label class="small text-muted d-block">Email Address</label>
                <span class="fw-bold"><%= guest.email || 'Not provided' %></span>
            </div>
            
            <div class="mb-3">
                <label class="small text-muted d-block">Telegram Handle</label>
                <span class="fw-bold"><%= guest.telegram || 'Not provided' %></span>
            </div>

            <hr class="my-4 opacity-10">

            <label class="small fw-bold text-uppercase text-muted mb-2 d-block" style="letter-spacing: 0.1em;">Internal Profile Notes</label>
            <p class="small text-muted italic"><%= guest.internal_notes || 'No specific preferences recorded for this guest.' %></p>
        </div>
    </div>

    <div class="col-md-8">
        <div class="card border-0 shadow-sm overflow-hidden">
            <div class="bg-dark text-white p-3">
                <h6 class="mb-0 small fw-bold text-uppercase" style="letter-spacing: 0.1em;">Stay History</h6>
            </div>
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light small text-muted">
                    <tr>
                        <th class="ps-4">Dates</th>
                        <th>Room</th>
                        <th>Status</th>
                        <th class="text-end pe-4">Total</th>
                    </tr>
                </thead>
                <tbody>
                    <% bookings.forEach(booking => { %>
                    <tr>
                        <td class="ps-4">
                            <div class="small"><%= booking.check_in_date %> &rarr; <%= booking.check_out_date %></div>
                        </td>
                        <td>
                            <div class="small fw-bold">Room <%= booking.room_number %></div>
                            <div class="text-muted small" style="font-size: 0.7rem;"><%= booking.type_name %></div>
                        </td>
                        <td>
                            <span class="badge status-badge <%= booking.status === 'checked_out' ? 'bg-secondary' : 'bg-success' %>">
                                <%= booking.status %>
                            </span>
                        </td>
                        <td class="text-end pe-4 fw-bold">
                            $<%= booking.total_price.toFixed(2) %>
                        </td>
                    </tr>
                    <% }) %>
                    <% if (bookings.length === 0) { %>
                    <tr><td colspan="4" class="text-center py-5 text-muted small">No stay history found</td></tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
