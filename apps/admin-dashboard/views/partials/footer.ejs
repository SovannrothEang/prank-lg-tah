    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const socket = io();
        const toastEl = document.getElementById('bookingToast');
        const toast = new bootstrap.Toast(toastEl, { delay: 10000 });

        socket.on('new_booking', (data) => {
            document.getElementById('toastGuest').textContent = data.guest_name;
            document.getElementById('toastRoom').textContent = data.room_type;
            document.getElementById('toastTotal').textContent = '$' + data.total.toLocaleString();
            toast.show();
            
            // Optional: Play a subtle notification sound
            try {
                const audio = new Audio('https://assets.mixkit.co/active_storage/sfx/2869/2869-preview.mp3');
                audio.play();
            } catch (e) {}
        });
    </script>
